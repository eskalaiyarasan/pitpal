{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "engine/rules/schema/board.schema.json",
  "title": "Board Schema",

  "$defs": {
    "Board": {
      "type": "object",
      "properties": {

        "pitsPerSide": {
          "allOf": [
            { "$ref": "engine/rules/schema/integer.schema.json#/$defs/Integer" }
          ]
        },

        "nSide": {
          "allOf": [
            { "$ref": "engine/rules/schema/integer.schema.json#/$defs/Integer" }
          ]
        },

        "nSeeds": {
          "allOf": [
            { "$ref": "engine/rules/schema/integer.schema.json#/$defs/Integer" }
          ]
        },

        "specialPits": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        }

      },

      "required": ["pitsPerSide", "nSide", "nSeeds"],
      "additionalProperties": false
    }
  }
}

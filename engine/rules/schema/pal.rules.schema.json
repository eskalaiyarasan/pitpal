{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/eskalaiyarasan/pitpal/tree/main/engine/rules/schema/pal.rule.schema.json",

  "type": "object",

  "properties": {
    "vRule": { "type": "string" },
    "vSchema": { "type" : "string", "const" : "s00.00.002" },

    "board": {
      "$ref": "board.schema.json#/$defs/Board"
    },
    "algorithm": {
      "$ref": "algorithm.schema.json#/$defs/Algorithm"
    },
    "capture": {
      "$ref": "capture.schema.json#/$defs/Capture"
    },
    "timelimit": {
      "$ref": "integer.schema.json#/$defs/Integer"
    },
    "nPlayers": {
      "$ref": "integer.schema.json#/$defs/Integer"
    },
    "direction": {
      "$ref": "boolean.schema.json#/$defs/Bool"
    },
    "mod": {
      "$ref": "integer.schema.json#/$defs/Integer"
    }
  },

  "required": [
    "vSchema",
    "vRule",
    "board",
    "algorithm",
    "capture",
    "nPlayers"
  ],

  "additionalProperties": false
}
